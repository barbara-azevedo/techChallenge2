version: '3.5'

services:
  postgres:
    container_name: <nome_container>
    image: postgres
    environment:
      POSTGRES_USER: <usuario>
      POSTGRES_PASSWORD: <senha>
      PGDATA: /data/postgres
    volumes:
       - postgres:/data/postgres
    ports:
      - "5432:5432"
    networks:
      - postgres
    restart: unless-stopped
  
networks:
  postgres:
    driver: bridge

volumes:
    postgres: